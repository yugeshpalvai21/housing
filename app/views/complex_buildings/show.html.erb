<div class="container" style="margin-top:15px;">
    <div class="row">
        <div class="col-md-6">
            <%= image_tag @complex_building.image, width: '100%', height: '500px', class: 'img-thumbnail' %>
        </div>
        <div class="col-md-6">
            <h1 align="center">Complex Bulding Details</h1><hr>
            <p>Owner: <%= @complex_building.owner %></p>
            <p>Address: <%= @complex_building.address %></p>
            <p>units: <%= @complex_building.units %></p>
            <p>Sqmt: <%= @complex_building.sqmt %></p>
            <p>Price: <%= number_to_currency @complex_building.price %></p>
            <p>
                <%= link_to "Buy Home", buy_complex_building_path(@complex_building), class: 'btn btn-primary btn-lg' %>
            </p>
            <% if user_signed_in? && current_user.manager %>
                <hr>
                <p>
                    <%= link_to "Edit Complex Bulding Details", edit_complex_building_path(@complex_building), class: 'btn btn-info'%>
                    <%= link_to "Delete This Asset", complex_building_path(@complex_building), method: :delete, data: {confirm: 'Are You Sure?'}, class: 'btn btn-danger' %>
                </p>
            <% end %>
        </div>
    </div>
</div>