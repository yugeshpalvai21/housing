<div class="container">
    <div class="row">
        <div class="col-md-6">
            <%= image_tag @commercial_unit.image, width: '100%', height: '500px' %>
        </div>
        <div class="col-md-6">
            <h5><%= number_to_currency @commercial_unit.price%></h5>
            <p><%= @commercial_unit.address %></p>
            <p>
                <%= link_to "Buy Home", buy_commercial_unit_path(@commercial_unit), class: 'btn btn-primary btn-lg' %>
            </p>
        </div>
    </div>
</div>
