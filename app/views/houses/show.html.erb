<div class="container" style="margin-top:15px;">
    <div class="row">
        <div class="col-md-6">
            <%= image_tag @house.image, width: '100%', height: '500px' %>
        </div>
        <div class="col-md-6">
            <h1 align="center">House Details</h1><hr>
            <p>Owner: <%= @house.owner %></p>
            <p>Address: <%= @house.address %></p>
            <p>Rooms: <%= @house.rooms %></p>
            <p>Sqmt: <%= @house.sqmt %></p>
            <p>Floors: <%= @house.floors %></p>
            <p>Air Condition: <%= @house.air_cond ? "Yes" : "No" %></p>
            <p>Price: <%= number_to_currency @house.price %></p>
            <p>
                <%= link_to "Buy Home", buy_house_path(@house), class: 'btn btn-primary btn-lg' %>
            </p>
            <% if user_signed_in? && current_user.manager %>
                <hr>
                <p>
                    <%= link_to "Edit House Details", edit_house_path(@house), class: 'btn btn-info'%>
                    <%= link_to "Delete This Asset", house_path(@house), method: :delete, data: {confirm: 'Are You Sure?'}, class: 'btn btn-danger' %>
                </p>
            <% end %>
        </div>
    </div>
</div>
